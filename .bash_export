# path to little scripts
export PATH="$HOME/.local/bin:$PATH"

# default editor
export EDITOR='vim'

# openssl
export OPENSSL_LIB_DIR=/usr/lib/x86_64-linux-gnu/
export OPENSSL_INCLUDE_DIR=/usr/include/openssl/

# postgresql
export PATH="/usr/lib/postgresql/12/bin:$PATH"

# Security tools
export PATH="$HOME/.local/usr/bin:$PATH"
export PATH="/usr/sbin:$PATH"
export PATH="$HOME/package/security/metasploit-framework:$PATH"
export PATH="$HOME/package/security/metasploit-framework/tools/exploit:$PATH"

# Programming language

## Rust
export CARGO_HOME="$HOME/.local/lang/cargo"
export RUSTUP_HOME="$HOME/.local/lang/rustup"
export PATH="$CARGO_HOME/bin:$PATH"

## node
export NODENV_ROOT="$HOME/.local/lang/nodenv"
export PATH="$NODENV_ROOT/bin:$PATH"
eval "$(nodenv init -)" &>/dev/null

## Golang
export GOROOT="$HOME/.local/lang/go"
export GOPATH="$HOME/.local/lang/go_path"
export PATH=$GOROOT/bin:$PATH
export GO111MODULE=on

## Python
export PYENV_ROOT="$HOME/.local/lang/pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init -)" &>/dev/null

## Ruby
export RBENV_ROOT="$HOME/.local/lang/rbenv"
export PATH="$RBENV_ROOT/bin:$PATH"
eval "$(rbenv init -)" &>/dev/null


# gpg git
export GPG_TTY=$(tty)
