#update
alias ieup="$HOME/package/dotfiles/update.sh && . $HOME/.bash_profile"
alias iecp="$HOME/package/dotfiles/copy.sh && . $HOME/.bash_profile"

# alias
alias lstat="stat --format='%a %A %10U %10G %20F %n' ./* .*"
alias lstats="stat --printf='%a %A %10U %10G %20F %n\n'"
alias lgrep="stat --format='%a %A %10U %10G %20F %n' ./* .* | grep"
alias pwdc='pwd | tr -d "\n" | pbcopy'
alias allps="ps aux"

# docker
alias dc="docker-compose"
alias dcu="docker-compose -p docker up -d"
alias dcd="docker-compose -p docker down"
alias dcs="docker-compose -p docker stop"
alias dstart="docker start"
alias dstop="docker stop"
dce() { docker-compose -p docker exec $1 /bin/bash; }
de() { docker exec -it $1 /bin/bash --login; }
alias drmi="docker rmi"
alias drm="docker rm"
alias di="docker images"
alias dcl="docker container ls -a"
alias dip="docker image prune"
alias dcp="docker container prune"
alias dv="docker volume"
alias dvl="docker volume ls"
alias dl="docker logs"

# ls
alias ls="ls --color=auto"
alias ll="ls -alF"
alias l="clear && ll"

# cd
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias ~="cd ~"
alias dotfiles="$HOME/package/dotfiles"

# cp/mv/rm
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'

# VSCode
alias vscode="code-insiders ."

# tar
alias tarxz="tar Jxf"
alias targz="tar zxf"

# git
alias gitinit="git commit --allow-empty -m 'Init commit'"
alias gitchmod="git update-index --add --chmod=+x"
alias ga="git add"
alias gb="git branch -a"
alias gc="git commit"
alias gs="git status"
alias gp="git push"
alias gco="git checkout"
alias gpat="git reset --hard HEAD^ && git am --3way ./patch/$@"
alias gsign="gitsign"

# python venv
alias von=". bin/activate"
alias voff="deactivate"
alias vdev=". .venv/dev/bin/activate"

